/ = form_for @address do |f|
/   = f.label :name
/   = f.text_field :name
/   %br
/   = f.label :address
/   = f.text_field :address
/   %br
/   = f.label :city
/   = f.text_field :city
/   %br
/   = f.label :state
/   = f.text_field :state
/   %br
/   = f.label :zip
/   = f.text_field :zip
/   %br
/   = f.submit "Create Address"

%input.name{type: "text", placeholder: "Name"}
%input.address{type: "text", placeholder: "Address"}
%input.city{type: "text", placeholder: "City"}
%input.state{type: "text", placeholder: "State"}
%input.zip{type: "text", placeholder: "Zip"}
%button.create-address Create Address


